    proxy_pass            <%= @proxy %>;
    proxy_read_timeout    <%= @proxy_read_timeout %>;
    proxy_connect_timeout <%= @proxy_connect_timeout %>;
    proxy_redirect        <%= @proxy_redirect %>;
<% if @proxy_method -%>
    proxy_method          <%= @proxy_method %>;
<% end -%>
<% if @proxy_set_body -%>
    proxy_set_body        <%= @proxy_set_body %>;
<% end -%>
